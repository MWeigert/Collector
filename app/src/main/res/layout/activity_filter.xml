<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.riverworld.collector.FilterActivity"
    android:background="#817272"
    android:theme="@android:style/Theme.Material">

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tabHost"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:theme="@android:style/Theme.Material">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@android:style/Theme.Material"
                android:background="#817272"></TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/tab_common"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:theme="@android:style/Theme.Material"
                    android:background="#817272">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/tf_ean"
                        android:editable="true"
                        android:autoText="false"
                        android:singleLine="true"
                        android:textIsSelectable="true"
                        android:textStyle="italic"
                        android:text="@string/tf_ean"
                        android:theme="@android:style/Theme.Material"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tf_titel"
                        android:editable="true"
                        android:autoText="false"
                        android:singleLine="true"
                        android:textIsSelectable="true"
                        android:textStyle="italic"
                        android:text="@string/tf_title"
                        android:layout_gravity="center_horizontal"
                        android:layout_below="@+id/tf_ean"
                        android:layout_alignParentStart="true"
                        android:theme="@android:style/Theme.Material" />

                    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/radioGroup"
                        android:layout_below="@+id/tf_titel"
                        android:layout_alignParentStart="true">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rb_book"
                            android:theme="@android:style/Theme.Material"
                            android:id="@+id/rb_book" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rb_movie"
                            android:theme="@android:style/Theme.Material"
                            android:id="@+id/rb_movie" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rb_game"
                            android:id="@+id/rb_game"
                            android:theme="@android:style/Theme.Material" />
                    </RadioGroup>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spn_genre"
                        android:layout_below="@+id/radioGroup"
                        android:layout_alignParentStart="true"
                        android:theme="@android:style/Theme.Material" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spn_language"
                        android:layout_below="@+id/spn_genre"
                        android:theme="@android:style/Theme.Material"
                        android:layout_alignParentEnd="true" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spn_year"
                        android:theme="@android:style/Theme.Material"
                        android:layout_below="@+id/spn_language"
                        android:layout_alignParentEnd="true" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cb_lent"
                        android:id="@+id/cb_lent"
                        android:theme="@android:style/Theme.Material"
                        android:layout_above="@+id/btn_filter_tab1"
                        android:layout_alignParentStart="true" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_update"
                        android:id="@+id/btn_filter_tab1"
                        android:onClick="buttonOnClick"
                        android:theme="@android:style/Theme.Material"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tab_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tf_publisher"
                        android:text="@string/tf_publisher"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:theme="@android:style/Theme.Material"
                        android:editable="false"
                        android:maxLines="1" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spn_writer"
                        android:layout_below="@+id/tf_publisher"
                        android:layout_alignParentStart="true"
                        android:theme="@android:style/Theme.Material" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spn_edition"
                        android:layout_below="@+id/spn_writer"
                        android:layout_alignParentStart="true"
                        android:theme="@android:style/Theme.Material" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spn_system"
                        android:layout_below="@+id/spn_edition"
                        android:layout_alignParentStart="true"
                        android:theme="@android:style/Theme.Material" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/txt_rating"
                        android:id="@+id/txt_rating"
                        android:layout_below="@+id/spn_system"
                        android:layout_alignParentStart="true"
                        android:theme="@android:style/Theme.Material" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cb_0"
                        android:id="@+id/cb_0"
                        android:layout_below="@+id/txt_rating"
                        android:layout_alignParentStart="true"
                        android:theme="@android:style/Theme.Material" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cb_16"
                        android:id="@+id/cb_16"
                        android:layout_alignTop="@+id/cb_0"
                        android:layout_alignStart="@+id/cb_18"
                        android:theme="@android:style/Theme.Material" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cb_6"
                        android:id="@+id/cb_6"
                        android:layout_below="@+id/cb_0"
                        android:layout_alignParentStart="true"
                        android:theme="@android:style/Theme.Material" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cb_18"
                        android:id="@+id/cb_18"
                        android:layout_below="@+id/cb_16"
                        android:layout_toEndOf="@+id/cb_0"
                        android:layout_marginStart="37dp"
                        android:theme="@android:style/Theme.Material" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cb_12"
                        android:id="@+id/cb12"
                        android:layout_below="@+id/cb_6"
                        android:layout_alignParentStart="true"
                        android:theme="@android:style/Theme.Material" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_update"
                        android:id="@+id/btn_filter_tab2"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:onClick="buttonOnClick"
                        android:theme="@android:style/Theme.Material" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tab_movie"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spn_studio"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:theme="@android:style/Theme.Material" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spn_director"
                        android:layout_below="@+id/spn_studio"
                        android:layout_alignParentStart="true"
                        android:theme="@android:style/Theme.Material" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cb_dvd"
                        android:id="@+id/cb_dvd"
                        android:layout_below="@+id/spn_director"
                        android:layout_alignParentStart="true"
                        android:theme="@android:style/Theme.Material" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cb_blueray"
                        android:id="@+id/cb_blueray"
                        android:layout_alignBottom="@+id/cb_dvd"
                        android:layout_alignParentEnd="true"
                        android:theme="@android:style/Theme.Material" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_update"
                        android:id="@+id/btn_filter_tab3"
                        android:onClick="buttonOnClick"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:theme="@android:style/Theme.Material" />
                </RelativeLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>
</RelativeLayout>
