<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.riverworld.collector.FilterCommon"
    android:background="#817272">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/tf_ean"
        android:editable="true"
        android:autoText="false"
        android:singleLine="true"
        android:textIsSelectable="true"
        android:textStyle="italic"
        android:text="@string/tf_ean"
        android:theme="@android:style/Theme.Material"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tf_titel"
        android:editable="true"
        android:autoText="false"
        android:singleLine="true"
        android:textIsSelectable="true"
        android:textStyle="italic"
        android:text="@string/tf_title"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/tf_ean"
        android:layout_alignParentStart="true"
        android:theme="@android:style/Theme.Material" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/tf_titel"
        android:layout_alignParentStart="true">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rb_book"
            android:theme="@android:style/Theme.Material"
            android:id="@+id/rb_book" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rb_movie"
            android:theme="@android:style/Theme.Material"
            android:id="@+id/rb_movie" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rb_game"
            android:id="@+id/rb_game"
            android:theme="@android:style/Theme.Material" />
    </RadioGroup>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spn_genre"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentStart="true"
        android:theme="@android:style/Theme.Material" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spn_language"
        android:layout_below="@+id/spn_genre"
        android:theme="@android:style/Theme.Material"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spn_year"
        android:theme="@android:style/Theme.Material"
        android:layout_below="@+id/spn_language"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cb_lent"
        android:id="@+id/cb_lent"
        android:theme="@android:style/Theme.Material"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:theme="@android:style/Theme.Material" />
</RelativeLayout>
